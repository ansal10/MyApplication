<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amd.myapplication.TrainRunningStatusActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainRunningStatusInputNumber">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trainNumberOrPNR"
                android:layout_weight="5"
                android:hint="Train Number or PNR">
                <requestFocus/>
            </AutoCompleteTextView>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainRunningStatusInputDOJ"
        android:layout_below="@+id/trainRunningStatusInputNumber">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayCode"
                android:inputType="number"
                android:maxLength="2"
                android:layout_weight="1"
                android:hint="DD"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/monthCode"
                android:inputType="number"
                android:maxLength="2"
                android:layout_weight="1"
                android:hint="MM"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yearCode"
                android:inputType="number"
                android:maxLength="2"
                android:layout_weight="1"
                android:hint="YY"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:id="@+id/getTrainRunningStatus"
                android:layout_weight="2" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainRunningStatusInputDOJ"
        android:id="@+id/trainRunningStatusDetails"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train:12435  Dep CNB at 12:12  Arr MAS at 11:00"
            android:id="@+id/runningTrainDetailView" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/trainRunningStatusDetails">
        <LinearLayout android:id="@+id/trainRunningLinearLayout" android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
