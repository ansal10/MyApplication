<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="2"
    tools:context=".MyActivity"
    android:id="@+id/linearMain">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Train Between Stations"
        android:id="@+id/trainBetweenStationActivity"
        android:clickable="true"
        android:onClick="trainBetweenStationsClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train Routes"
        android:id="@+id/trainRoutesActivity"
        android:layout_below="@+id/trainBetweenStationActivity"
        android:layout_marginTop="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="trainRoutesClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Availiblity"
        android:id="@+id/seatAvailiblityActivity"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/trainRoutesActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="seatAvailiblityClick" />

</RelativeLayout>
